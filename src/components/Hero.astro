---
import { Icon } from "astro-icon/components";
import Typeanimation from "./Typeanimation.astro";
import Animation from "../components/Animation.astro";
---

<div
    id="hero"
    class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-white m-4 text-base items-end"
>
    <div class="grid-cols-subgrid col-span-1 row-span-2 grid-flow-row-dense ">
        <p class="text-sky-500 animate-wiggle-2 ">Hello ðŸ‘‹ my name is</p>
        <Typeanimation
            speed="150"
            text="Hoang Dang"
            custom_class="font-bold text-myname-sm sm:text-myname text-sky-200 font-quirlycues"
        />
        <p class="font-bold text-3xl text-sky-500">
            I build software solution and automate things <Icon
                name="ic:baseline-settings"
                class="size-10 inline animate-spin-slow "
            />
            <div class="rounded-full">
                <object
                    type="image/svg+xml"
                    data="svg/profile_animated.svg"
                    class="size-28 grayscale hover:grayscale-0"></object>
            </div>
        </p>
        <br />
        <button
            class="self-center bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 h-11 border-b-4 border-blue-700 hover:border-blue-500 rounded-xl"
        >
            Start
        </button>
    </div>
    <div class="row-span-1"></div>
    <div class="row-span-1"></div>

    <div class="grid grid-cols-4 gap-0 row-span-2 col-span-2 h-fit w-fit place-self-end ">
        <!-- <div class="dot"></div> -->

        <Icon
            name="line-md:chevron-triple-down"
            class="size-20 md:size-28 text-gray-400 animate-pulse"
        />
        <Icon
            name="line-md:sunny-outline-to-moon-alt-loop-transition"
            class="size-20 md:size-28 text-gray-700 hover:text-gray-400 transition-all duration-300 ease-linear"
        />
        <Icon name="line-md:arrow-close-left" class="size-20 md:size-28 text-gray-700" />
        <Icon
            name="line-md:gauge-loop"
            class="size-20 md:size-28 text-gray-700"
        />
        <Icon name="line-md:github-loop" class="top size-20 md:size-28 text-gray-700 hover:text-gray-400 transition-all duration-300 ease-linear" />
        <Icon
            name="line-md:arrow-right"
            class="size-20 md:size-28 text-gray-700"
        />
        <Icon
            name="line-md:coffee-half-empty-twotone-loop"
            class="size-20 md:size-28 text-gray-700"
        />
        <Icon
            name="line-md:chevron-triple-up"
            class="size-20 md:size-28 text-gray-700"
            href={"https://github.com/bigchamps/bigchamps.github.io"}
        />
        
    </div>
</div>

