---
import { Icon } from 'astro-icon/components'
type Props = {
    icon: string
}

const {icon} = Astro.props
---

<div >
    <Icon name={icon} class="relative flex items-center justify-center h-12 w-12 mx-2 my-2 bg-gray-800 text-green-500 hover:bg-green-600
                                hover:text-white rounded-3xl hover:rounded-xl
                                transition-all duration-300"/>
</div>